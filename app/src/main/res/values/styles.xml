<resources>

    <!-- Base application theme. -->
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/grey1</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/darkGrey3</item>
        <item name="android:windowBackground">@color/grey1</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="colorControlActivated">@color/darkGrey1</item>
    </style>

    <!-- activity themes-->
    <style name="Splash.Home">

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Splash.Translucent">

        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="colorControlActivated">@color/darkGrey1</item>
    </style>

    <style name="Splash.Translucent.About">
        <item name="android:windowEnterTransition">@transition/about_enter</item>
        <item name="android:windowExitTransition">@transition/about_return</item>
    </style>

    <style name="Splash.Translucent.PhotoDescription">

        <item name="android:statusBarColor">@color/darkGrey3</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowSharedElementEnterTransition">@transition/photo_description_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/photo_description_shared_exit</item>
        <!--<item name="android:windowEnterTransition">@transition/photo_description_enter</item>-->
        <!--<item name="android:windowReturnTransition">@transition/photo_description_exit</item>-->
    </style>

    <style name="Splash.Translucent.UserDescription">

        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowSharedElementEnterTransition">@transition/user_description_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/user_description_shared_exit</item>
        <item name="android:windowEnterTransition">@transition/user_description_enter</item>
        <item name="android:windowReturnTransition">@transition/user_description_exit</item>
    </style>

    <style name="Splash.Translucent.PhotoFullscreen">

        <item name="android:statusBarColor">@color/darkGrey3</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowSharedElementEnterTransition">@transition/photo_fullscreen_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/photo_fullscreen_shared_exit</item>
    </style>

    <style name="Splash.Translucent.AllSearch">
    </style>

    <style name="Splash.Translucent.PhotoStats">
