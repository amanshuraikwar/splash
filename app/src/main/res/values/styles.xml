<resources>

    <!-- Base application theme. -->
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/fog</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/coal</item>
    </style>

    <style name="Splash.Home">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Splash.Translucent">
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Splash.Translucent.About">
        <item name="android:statusBarColor">@color/lightBlue</item>
    </style>

    <style name="Splash.Translucent.PhotoDescription">
        <item name="android:statusBarColor">@color/coal</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style
        name="Widget.Splash.BorderlessImageButton"
        parent="@android:style/Widget.Material.ImageButton">

        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Widget.Splash.InlineActionButton" parent="@android:style/Widget.Material.Button">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.PhotoStatsVal</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="Widget.Splash.PhotoInfoButton" parent="@android:style/Widget.Material.Button">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.PhotoStatsVal</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="TextAppearance.PhotoStatsVal" parent="@style/TextAppearance.Caption">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFeatureSettings">smcp, onum</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.ArtistName" parent="@style/TextAppearance.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontFeatureSettings">smcp, onum</item>
    </style>

    <style name="TextAppearance.ArtistUsername" parent="@style/TextAppearance.Caption">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:color">@color/darkGrey</item>
    </style>

    <style
        name="Widget.Splash.Toolbar"
        parent="@android:style/Widget.Material.Toolbar">

        <item name="titleTextAppearance">@android:style/TextAppearance.Material.Widget.ActionBar.Title</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Splash.Toolbar.SmallCapsTitle">
        <item name="titleTextAppearance">@style/TextAppearance.ToolbarTitleSmallCaps</item>
    </style>

    <style name="TextAppearance.ToolbarTitleSmallCaps"
        parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">

        <item name="android:textColor">@color/coal</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style
        name="TextAppearance.Headline"
        parent="@android:style/TextAppearance.Material.Headline">

        <!-- change default title text appearance here -->
    </style>

    <style
        name="TextAppearance.Title"
        parent="@android:style/TextAppearance.Material.Title">

        <!-- change default title text appearance here -->
    </style>

    <style
        name="TextAppearance.Subhead"
        parent="@android:style/TextAppearance.Material.Subhead">

    </style>

    <style
        name="TextAppearance.Body1"
        parent="@android:style/TextAppearance.Material.Body1">

    </style>

    <style
        name="TextAppearance.Body2"
        parent="@android:style/TextAppearance.Material.Body2">

    </style>

    <style
        name="TextAppearance.Caption"
        parent="@android:style/TextAppearance.Material.Caption">

    </style>

    <style
        name="TextAppearance.PersistentMessage"
        parent="@style/TextAppearance.Caption">

        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fog</item>
    </style>

    <style
        name="TextAppearance.ErrorTitle"
        parent="@style/TextAppearance.Title">

        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="TextAppearance.ErrorTitle.Light"
        parent="@style/TextAppearance.ErrorTitle">

        <item name="android:textColor">@color/smoke</item>
    </style>

    <style
        name="TextAppearance.ErrorMessage"
        parent="@style/TextAppearance.Body2">

        <item name="android:textColor">@color/grey</item>
    </style>

    <style
        name="TextAppearance.ErrorMessage.Light"
        parent="@style/TextAppearance.ErrorMessage">

        <item name="android:textColor">@color/lightSmoke</item>
    </style>

    <style
        name="TextAppearance.Button"
        parent="@android:style/TextAppearance.Material.Widget.Button">

        <item name="android:textColor">@color/coal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style
        name="TextAppearance.Button.Light"
        parent="@style/TextAppearance.Button">

        <item name="android:textColor">@color/fog</item>
    </style>

    <style
        name="Widget.Splash.BorderlessButton"
        parent="@android:style/Widget.Material.Button.Borderless">

        <item name="android:textAppearance">@style/TextAppearance.Button</item>
    </style>

    <style
        name="Widget.Splash.BorderlessButton.Light"
        parent="@android:style/Widget.Material.Light.Button.Borderless">

        <item name="android:textAppearance">@style/TextAppearance.Button.Light</item>
    </style>

</resources>
