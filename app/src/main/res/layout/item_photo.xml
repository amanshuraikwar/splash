<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:foreground="@drawable/mid_grey_ripple"
    android:stateListAnimator="@animator/raise"
    android:elevation="1dp"
    android:clickable="true"
    android:focusable="true">

    <com.android.sonu.ummsplash.ui.widget.WidthRelativeAspectRatioImageView
        android:id="@+id/photoIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/photoDescriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_background_dark_bottom_up_dark" />

    <ImageButton
        android:id="@+id/downloadIb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:tint="@color/fog"
        android:src="@drawable/ic_file_download_black_24dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:tint="@color/fog"
        android:src="@drawable/ic_image_aspect_ratio_black_24dp"
        tools:ignore="ContentDescription"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/photoResolutionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:fontFeatureSettings="smcp, onum"
        android:textColor="@color/fog"
        android:textAppearance="@android:style/TextAppearance.Material.Caption"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <ImageView
            android:id="@+id/artistProfileImageIv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/artistNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="12dp"
            android:textStyle="bold"
            android:fontFeatureSettings="smcp, onum"
            android:textAppearance="@android:style/TextAppearance.Material.Caption"
            android:ellipsize="end"
            android:lines="1"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/solidColorFl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/heartIv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start"
                android:src="@drawable/ic_heart_solid_black_24dp"
                android:tint="#212121"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/photoLikesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFeatureSettings="smcp, onum"
                android:textColor="#212121"
                android:textAppearance="@android:style/TextAppearance.Material.Caption"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
