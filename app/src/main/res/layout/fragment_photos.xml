<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.pixelcan.inkpageindicator.InkPageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_gravity="bottom"
            app:dotDiameter="8dp"
            app:dotGap="8dp"
            app:animationDuration="320"
            app:pageIndicatorColor="@color/grey3"
            app:currentPageIndicatorColor="@color/darkGrey1" />

        <FrameLayout
            android:id="@+id/overlayFl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey1Trans"
            android:visibility="gone">

            <TextView
                android:id="@+id/overlayTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="88dp"
                android:paddingBottom="88dp"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.OverlayLarge"
                android:text="all photos" />
        </FrameLayout>
</FrameLayout>
